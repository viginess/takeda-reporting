{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client", "node"],

    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "drizzle-orm/*": ["node_modules/drizzle-orm/*"],
      "drizzle-orm": ["node_modules/drizzle-orm"],
      "pg": ["node_modules/@types/pg", "node_modules/pg"],
      "zod": ["node_modules/zod"],
      "jsonwebtoken": ["node_modules/@types/jsonwebtoken", "node_modules/jsonwebtoken"],
      "@trpc/server": ["node_modules/@trpc/server"],
      "@trpc/server/*": ["node_modules/@trpc/server/*"],
      "@supabase/supabase-js": ["node_modules/@supabase/supabase-js"],
      "@supabase/supabase-js/*": ["node_modules/@supabase/supabase-js/*"]
    }
  },
  "include": ["src"]
}